includeConfig 'VERSION'

manifest {
    homePage = 'https://github.com/mirnylab/distiller-nf'
    mainScript = 'distiller.nf'
}

process.container = "mirnylab/distiller_env:${version}"


profiles {


    standard {
        process {
            executor='local'
        }
        executor {
            cpus = 40
        }
    }


    cluster {
        process {
            executor='lsf'
            queue='short'
            memory='8 GB'
            time='4h'
        }
    }

}

params {
    fastqc_cpus = 4
    chunk_cpus = 8
    map_cpus = 8
    merge_cpus = 8
    parse_cpus = 8
    filter_make_pairs_cpus = 8
    bin_cpus = 20
}

docker {
    enabled = true
    runOptions = '-u $(id -u):$(id -g)'
}

timeline {
    enabled = true
}

trace {
    enabled = true
}

